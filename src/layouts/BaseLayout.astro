---
export interface Props {
  title?: string;
  description?: string;
}
import "../styles/main.scss";
// import { ClientRouter } from "astro:transitions";
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About", href: "/about" },
  { name: "Contact", href: "/contact" },
];

const {
  title = "Wanderlust Hostel Koh Phangan | Social Party Hostel Thailand",
  description = "Top-rated social hostel in Koh Phangan, Thailand. 5 minutes from Thongsala Pier, perfect for Full Moon Party. Clean dorms, pool bar, 24/7 security. Book your island adventure!",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <meta
      name="keywords"
      content="Koh Phangan hostel, Thailand backpacker accommodation, Full Moon Party hostel, Thongsala pier hostel, budget travel Thailand, social hostel Koh Phangan, party hostel Thailand, backpacker Koh Phangan, island hostel Thailand"
    />
    <meta name="author" content="Wanderlust Hostel Koh Phangan" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://wanderlust-hostel.com" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://wanderlust-hostel.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://wanderlust-hostel.com/hostel-pool.jpeg"
    />
    <meta property="og:site_name" content="Wanderlust Hostel Koh Phangan" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://wanderlust-hostel.com" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://wanderlust-hostel.com/hostel-pool.jpeg"
    />

    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LodgingBusiness",
        "name": "Wanderlust Hostel Koh Phangan",
        "description": "Social party hostel in Koh Phangan, Thailand. 5 minutes from Thongsala Pier, perfect for Full Moon Party and island exploration.",
        "url": "https://wanderlust-hostel.com",
        "telephone": "+66 94 891 4361",
        "email": "hello@wanderlust-hostel.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "140 16, Ban Tai",
          "addressLocality": "Koh Phangan",
          "addressRegion": "Surat Thani",
          "postalCode": "84280",
          "addressCountry": "TH"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "9.7384",
          "longitude": "100.0077"
        },
        "priceRange": "$",
        "amenityFeature": [
          { "@type": "LocationFeatureSpecification", "name": "Pool" },
          { "@type": "LocationFeatureSpecification", "name": "Bar" },
          { "@type": "LocationFeatureSpecification", "name": "24/7 Security" },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Air Conditioning"
          },
          {
            "@type": "LocationFeatureSpecification",
            "name": "Female-Only Rooms"
          }
        ],
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "8.9",
          "reviewCount": "500+",
          "bestRating": "10",
          "worstRating": "1"
        },
        "sameAs": [
          "https://www.instagram.com/wanderlustkohphangan/",
          "https://www.hostelworld.com/pwa/hosteldetails.php/The-Wanderlust-Hostel/Koh-Phangan/272966"
        ]
      }
    </script>
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link
      rel="prefetch"
      href="https://api.fontshare.com/v2/css?f[]=bespoke-sans@300,301,400,401,500,501,700,701,800,801,1,2&f[]=expose@400,500,700,900,1&display=swap"
    />
    <link
      href="https://api.fontshare.com/v2/css?f[]=bespoke-sans@300,301,400,401,500,501,700,701,800,801,1,2&f[]=expose@400,500,700,900,1&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <!-- <ClientRouter /> -->
    <nav class="navbar" id="navbar">
      <div class="container">
        <a href="/" class="navbar__logo">
          <span class="navbar__logo-icon">üéâ</span>
          Wanderlust
        </a>

        <ul class="navbar__menu" id="navMenu">
          {
            navLinks.map((link) => (
              <li>
                <a class="navbar__link" href={link.href}>
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>

        <div class="navbar__cta">
          <a
            style="color:white; background:#1c1c1c "
            href="https://www.hostelworld.com/pwa/hosteldetails.php/The-Wanderlust-Hostel/Koh-Phangan/272966?guests=2"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn--accent btn--outline">Book</a
          >
        </div>

        <button
          class="navbar__hamburger"
          id="hamburger"
          aria-label="Toggle menu"
        >
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </nav>

    <div id="overlay"></div>

    <main>
      <div class="madeby">
        Made with ‚ù§Ô∏è by <a href="https://aayanshaikh.com">Aayan</a>
      </div>
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer__grid">
          <div class="footer__column">
            <h3>About</h3>
            <p>
              140 16, Ban Tai, Koh Phangan<br />Surat Thani 84280, Thailand
            </p>
            <a
              style="color:white; background:#1c1c1c "
              href="https://www.hostelworld.com/pwa/hosteldetails.php/The-Wanderlust-Hostel/Koh-Phangan/272966?guests=2&from=2025-07-24&to=2025-07-25"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn--accent btn--outline">Book</a
            >
          </div>

          <div class="footer__column">
            <h3>Links</h3>
            <ul>
              {
                navLinks.map((link) => (
                  <li>
                    <a href={link.href}>{link.name}</a>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="footer__column">
            <h3>Contact</h3>
            <ul>
              <li>
                <a href="mailto:edjer@wanderlust.com">edjer@wanderlust.com</a>
              </li>
              <li><a href="tel:+1 (234) 567-890">+66 94 891 4361</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const navbar = document.getElementById("navbar");
      const hamburger = document.getElementById("hamburger");
      const navMenu = document.getElementById("navMenu");
      const overlay = document.getElementById("overlay");

      hamburger?.addEventListener("click", () => {
        hamburger.classList.toggle("active");
        navMenu.classList.toggle("active");
        overlay.classList.toggle("active");
      });

      overlay?.addEventListener("click", () => {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
        overlay.classList.remove("active");
      });

      window.addEventListener("scroll", () => {
        navbar.classList.toggle("scrolled", window.scrollY > 50);
      });
    </script>
  </body>
</html>
<style lang="scss">
  .madeby {
    color: white;

    a {
      text-decoration: underline;
      color: inherit;
    }

    user-select: none;
    mix-blend-mode: luminosity;

    z-index: 9999999;
    text-transform: capitalize;
    position: fixed;
    bottom: 20px;
    right: 30px;
    padding: 0.5rem 1rem;
    background: rgba($color: grey, $alpha: 0.1);
    backdrop-filter: blur(15px);
    border-radius: 20px;
    outline: 1px solid rgba($color: grey, $alpha: 0.2);

    @media (max-width: 1024px) {
      left: 50%;
      right: auto;
      width: max-content;
      /* Important: Override the default 'right' property */
      transform: translateX(-50%);
    }
  }
</style>
